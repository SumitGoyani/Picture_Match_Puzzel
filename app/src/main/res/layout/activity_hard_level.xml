<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F4F3"
    tools:context=".Activities.hard_level_activity">
    <include layout="@layout/tool_bar"></include>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_500sdp"
        android:orientation="vertical"
        android:background="@drawable/main"
        android:layout_marginTop="@dimen/_40sdp"
        android:gravity="center">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:layout_marginVertical="@dimen/_50sdp"
        android:background="@drawable/border_layaout"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match 1"
                android:layout_centerHorizontal="true"
                android:id="@+id/Match_txt"
                android:textSize="@dimen/_25sdp"
                ></TextView>

            <Button
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_33sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_7sdp"
                android:background="@drawable/question"
                android:id="@+id/warning_button3"
                app:backgroundTint="@null"></Button>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"

            android:background="@color/black">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <GridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_below="@id/Match_txt"
                android:id="@+id/hard_grid_view"></GridView>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>